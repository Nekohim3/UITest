      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UITest.Views"
      xmlns:pageManager="clr-namespace:UITest.Utils.PageManager"
      xmlns:viewModels="clr-namespace:UITest.ViewModels"
      mc:Ignorable="d" d:DataContext="{d:DesignInstance viewModels:MainPageViewModel}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">
    <Page.Resources>


    </Page.Resources>
    <Grid>
        <StackPanel Width="150">
            <TextBlock Text="MainPage" TextAlignment="Center"/>
            <Button Content="Справочники" Margin="2" Command="{Binding RefBooksCmd}"/>
            <Button Content="СТСиК" Margin="2" Command="{Binding STSiKCmd}"/>
            <Button Content="СУб" Margin="2" Command="{Binding SMSCmd}"/>
        </StackPanel>
    </Grid>
